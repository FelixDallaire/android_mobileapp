<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/statusContainerCardView"
        android:layout_width="350dp"
        android:layout_height="114dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#D1D1D1"
        app:cardCornerRadius="15dp"
        app:contentPadding="40dp"
        app:contentPaddingLeft="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/elevator_status_TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Status"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:fontFamily="sans-serif-black" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/endTaskBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="End task"
        app:layout_constraintEnd_toEndOf="@+id/statusContainerCardView"
        app:layout_constraintStart_toStartOf="@+id/statusContainerCardView"
        app:layout_constraintTop_toBottomOf="@+id/statusContainerCardView" />

    <Button
        android:id="@+id/setInactive_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Set Inactive"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endTaskBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundDark">

    <ImageView
        android:id="@+id/container_elevator_card_ImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/card_wallpaper_red_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_model"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Model"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/container_elevator_card_ImageView"
        app:layout_constraintStart_toStartOf="@+id/textView_serialNumber"
        app:layout_constraintTop_toBottomOf="@+id/textView_serialNumber"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_elevatorID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elevator ID"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/container_elevator_card_ImageView"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="@+id/container_elevator_card_ImageView"
        app:layout_constraintTop_toTopOf="@+id/container_elevator_card_ImageView" />

    <TextView
        android:id="@+id/textView_serialNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Serial Number"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView_elevatorID"
        app:layout_constraintTop_toBottomOf="@+id/textView_elevatorID" />

    <ImageView
        android:id="@+id/info_Btn"
        android:layout_width="78dp"
        android:layout_height="61dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:clickable="true"
        android:paddingVertical="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/container_elevator_card_ImageView"
        app:layout_constraintEnd_toEndOf="@+id/container_elevator_card_ImageView"
        app:layout_constraintHorizontal_bias="0.976"
        app:layout_constraintStart_toStartOf="@+id/container_elevator_card_ImageView"
        app:layout_constraintTop_toTopOf="@+id/container_elevator_card_ImageView"
        app:layout_constraintVertical_bias="0.545"
        app:srcCompat="@drawable/right_arrow" />
    "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/container_elevator_card_ImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/right_arrow" />

    <!--test-->


</androidx.constraintlayout.widget.ConstraintLayout>
